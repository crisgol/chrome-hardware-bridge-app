{
  "name": "Chrome Hardware Bridge",
  "version": "1.0",
  "manifest_version": 2,
  "options_page": "options.html",
  "description": "Print HTML/PDF directly to printer",
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["myscript.js"]
    }
  ],
  "permissions": [
    "nativeMessaging",
	"storage"
  ]
}
